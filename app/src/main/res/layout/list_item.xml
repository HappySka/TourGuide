<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/list_item_layout_height"
    android:id="@+id/list_item"
    android:orientation="horizontal"
    android:background="@color/item_background">

    <ImageView
        android:id="@+id/image"
        android:layout_width="@dimen/list_item_layout_height"
        android:layout_height="@dimen/list_item_layout_height"
        android:src="@mipmap/ic_launcher" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingBottom="5dp"
        android:paddingLeft="12dp"
        android:paddingTop="2dp">

        <TextView
            android:id="@+id/attraction_name"
            style="@style/list_item_attraction_name"
            tools:text="Best Attraction Ever" />

        <TextView
            android:id="@+id/attraction_info"
            style="@style/list_item_addtional_info"
            tools:text="Best Attraction in Europe" />

        <TextView
            android:id="@+id/attraction_address"
            style="@style/list_item_addtional_info"
            android:drawableLeft="@drawable/ic_location"
            android:drawablePadding="@dimen/attraction_address_icon_padding"
            tools:text="Attraction Road 7" />

    </LinearLayout>

</LinearLayout>